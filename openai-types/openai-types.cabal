cabal-version:      2.4

-- Initial package description 'openai-types.cabal' generated by
-- 'cabal init'. For further documentation, see:
--   http://haskell.org/cabal/users-guide/
-- 
-- The name of the package.
name:               openai-types

-- The package version.
-- See the Haskell package versioning policy (PVP) for standards
-- guiding when and how versions should be incremented.
-- https://pvp.haskell.org
-- PVP summary:      +-+------- breaking API changes
--                   | | +----- non-breaking API additions
--                   | | | +--- code changes with no API change
version:            0.1.0.0

-- A short (one-line) description of the package.
synopsis:
    This library provides a wrapper for the OpenAI API, making it easy to implement services exposed by the OpenAI API in your Haskell projects. With this library, you can perform basic query operations on the OpenAI API with just a few lines of code.

-- A longer description of the package.
-- description:

-- URL for the project homepage or repository.
homepage:           https://github.com/braejan/haskell-gpt3

-- A URL where users can report bugs.
-- bug-reports:

-- The license under which the package is released.
license:            MIT

-- The file containing the license text.
license-file:       LICENSE

-- The package author(s).
author:             Braejan Arias

-- An email address to which users can send suggestions, bug reports, and patches.
maintainer:         ing.brayanarias@gmail.com

-- A copyright notice.
-- copyright:
category:           Web

-- Extra files to be distributed with the package, such as examples or a README.
extra-source-files: CHANGELOG.md

library
    -- Modules exported by the library.
    exposed-modules:
        OpenAI.API.V1.Common.Helper
        OpenAI.API.V1.Common.Usage
        OpenAI.API.V1.Completion.Choice
        OpenAI.API.V1.Configuration.Configuration
        OpenAI.API.V1.Edit.Choice
        OpenAI.API.V1.Edit.Request
        OpenAI.API.V1.Edit.Response
        OpenAI.API.V1.Completion.Request
        OpenAI.API.V1.Completion.Response     

    -- Modules included in this library but not exported.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:

    -- Other library packages from which modules are imported.
    build-depends:
        base ^>=4.14.3.0,
        aeson ^>=2.1.1.0,
        containers ^>=0.6.5.1,
        text ^>=1.2.4.1,

    -- Directories containing source files.
    hs-source-dirs:   src

    -- Base language which the package is written in.
    default-language: Haskell2010

test-suite openai-types-test
    -- Base language which the package is written in.
    default-language: Haskell2010

    -- The interface type and version of the test suite.
    type:             exitcode-stdio-1.0

    -- Directories containing source files.
    hs-source-dirs:   test

    -- The entrypoint to the test suite.
    main-is:          Main.hs

    other-modules:        
        OpenAI.API.V1.Completion.RequestTest
        OpenAI.API.V1.Completion.ChoiceTest
        OpenAI.API.V1.Common.UsageTest
        OpenAI.API.V1.Completion.ResponseTest
        OpenAI.API.V1.Edit.ChoiceTest
        OpenAI.API.V1.Edit.ResponseTest
        OpenAI.API.V1.Edit.RequestTest
        
    -- Test dependencies.
    build-depends:
        aeson,
        base ^>=4.14.3.0,
        text,
        bytestring,
        hspec,
        tasty,
        tasty-hunit,
        openai-types,
        containers ^>=0.6.5.1,